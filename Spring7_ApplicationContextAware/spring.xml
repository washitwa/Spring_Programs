<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id='Circ' class='Circle'>
	<property name='pointA' ref='point1'></property>
	<property name='pointB' ref='point2'></property>
	<property name='pointC' ref='point3'></property>
	</bean>
	<bean id='point1' class='Point'>
	<property name='r' value='1'></property>
	</bean>
	<bean id='point2' class='Point'>
	<property name='r' value='2'></property>
	</bean>
	<bean id='point3' class='Point'>
	<property name='r' value='3'></property>	
	</bean>

</beans>